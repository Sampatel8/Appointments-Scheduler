<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.scheduleappotiment">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ScheduleAppotiment">
        <activity android:name=".MainActivity"
            android:theme="@style/Theme.ScheduleAppotiment.NoActionBar">
        </activity>
        <activity android:name=".ui.ForgetPassActivity"/>
        <activity android:name=".ui.LoginActivity"
            android:theme="@style/Theme.ScheduleAppotiment.NoActionBar">
        </activity>
        <activity android:name=".ui.MakeAppointment"
            android:theme="@style/Theme.ScheduleAppotiment"/>
        <activity android:name=".ui.EditProfileActivity"/>
        <activity android:name=".ui.SignUpActivity"
            android:theme="@style/Theme.ScheduleAppotiment.NoActionBar"/>
        <activity android:name=".ui.SplashActivity"
            android:theme="@style/Theme.ScheduleAppotiment.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.MyTimeSlotActivity"
            android:theme="@style/Theme.ScheduleAppotiment.NoActionBar"/>
        <activity android:name=".ui.AssignTimeSlotActivity"
            android:theme="@style/Theme.ScheduleAppotiment.NoActionBar"/>
        <activity android:name=".ui.AppointmentDetails"
            android:theme="@style/Theme.ScheduleAppotiment.NoActionBar"/>
        <activity android:name=".ui.NotificationsActivity"
            android:theme="@style/Theme.ScheduleAppotiment.NoActionBar"/>
    </application>

</manifest>