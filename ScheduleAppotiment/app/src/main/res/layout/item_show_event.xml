<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardUseCompatPadding="true"
    app:contentPadding="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_4sdp"
        android:paddingTop="@dimen/_4sdp"
        android:paddingBottom="@dimen/_4sdp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/event_title_tv"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingVertical="@dimen/_5sdp"
            android:text="Event Title" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/event_desc_tv"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_title_tv"
            android:layout_alignStart="@id/event_title_tv"
            android:layout_marginTop="@dimen/_3sdp"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingVertical="3dp"
            android:text="This is Description..." />

        <View
            android:id="@+id/divider_1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/event_desc_tv"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/gray_divider"
            android:backgroundTint="@color/gray_divider" />
        <LinearLayout
            android:id="@+id/event_dt_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider_1"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_alignStart="@id/event_title_tv"
            android:layout_toLeftOf="@id/delete_iv">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/event_date_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingVertical="@dimen/_4sdp"
                android:drawableStart="@drawable/ic_event"
                android:text="27-Jun-2021"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/_5sdp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/event_time_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingVertical="@dimen/_4sdp"
                android:drawableStart="@drawable/ic_event_time"
                android:drawablePadding="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:text="12:27 PM"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/delete_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/divider_1"
            android:src="@drawable/ic_delete_outline"
            app:tint="@color/red"
            android:layout_alignTop="@id/event_dt_linear"
            android:layout_alignBottom="@id/event_dt_linear"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>