<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_card"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:contentPadding="@dimen/_3sdp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/from_contact_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_2sdp"
            android:paddingEnd="@dimen/_4sdp"
            android:paddingStart="@dimen/_5sdp"
            android:textAlignment="textStart"
            android:drawableStart="@drawable/ic_account_circle"
            android:drawablePadding="@dimen/_4sdp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/status_tv"
            android:layout_alignParentTop="true"
            style="@style/TextAppearance.MaterialComponents.Headline6"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_2sdp"
            android:paddingEnd="@dimen/_4sdp"
            android:textAlignment="textStart"
            android:paddingStart="@dimen/_5sdp"
            android:drawableStart="@drawable/ic_event_time"
            android:drawablePadding="@dimen/_4sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@id/from_contact_tv"
            style="@style/TextAppearance.MaterialComponents.Headline6"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/msg_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_below="@id/status_tv"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            style="@style/TextAppearance.MaterialComponents.Body1"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>